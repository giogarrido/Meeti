<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%= nombrePagina %>
    </h1>

    <form action="/nuevo-grupo" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Nombre del grupo">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="descripcion" name="descripcion">
                <trix-editor input="descripcion"></trix-editor>

            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <select name="categoriaId" id="categoria">
                <option value="" disabled selected>-- Elige una categoría --</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %>
            </select>
        </div>
        <div class="campo">
            <label for="imagen">imagen</label>
            <input type="file" id="imagen" name="imagen">
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="url" id="url" name="url" placeholder="Sitio web">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Grupo">
        </div>
    </form>
</main>