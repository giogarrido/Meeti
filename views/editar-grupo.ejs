<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%= nombrePagina %>
    </h1>

    <form method="POST" class="default-form" >
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" value="<%= grupo.nombre %>" id="nombre" name="nombre" placeholder="Nombre del grupo">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>

            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <select name="categoriaId" id="categoria">
                <option value="" disabled selected>-- Elige una categoría --</option>
                <% categorias.forEach(categoria => { %>
                    <option 
                        value="<%= categoria.id %>"
                        <% if(categoria.id === grupo.categoriaId) { %>
                            selected
                        <% } %>
                    ><%= categoria.nombre %></option>
                <% }) %>

            </select>
        </div>

        <div class="campo">
            <label for="url">Sitio Web</label>
            <input value="<%= grupo.url %>" type="url" id="url" name="url" placeholder="Sitio web">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>
    </form>
</main>